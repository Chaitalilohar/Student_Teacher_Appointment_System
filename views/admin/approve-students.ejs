<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approve Students</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        body {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f3f4f6;
            margin: 0;
        }
        .back-button-container {
            position: fixed;
            top: 1rem;
            left: 1rem;
            z-index: 1000;
        }
        .back-button {
            display: inline-block;
            padding: 0.5rem 1rem;
            background-color: #023d0d; /* Tailwind's blue-500 */
            color: white;
            border-radius: 0.375rem; /* Tailwind's rounded-md */
            text-align: center;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .back-button:hover {
            background-color: #004e15; /* Tailwind's blue-600 */
        }
    </style>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</head>
<body>
    <div class="back-button-container">
        <button class="back-button" onclick="goBack()">Go Back</button>
    </div>

    <div class="container mx-auto flex p-4 justify-center items-center flex-col">
        <h2 class="text-2xl font-bold mb-4">Approve Students</h2>
        <div class="overflow-x-auto">
            <table class="table-auto min-w-full bg-white rounded-lg shadow-md border-collapse">
                <thead class="bg-green-900 text-white">
                    <tr>
                        <th class="px-4 py-2">Name</th>
                        <th class="px-4 py-2">Email</th>
                        <th class="px-4 py-2">Action</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <% students.forEach(student => { %>
                        <tr class="border-t">
                            <td class="px-4 py-2"><%= student.name %></td>
                            <td class="px-4 py-2"><%= student.email %></td>
                            <td class="px-4 py-2">
                                <form action="/admin/approve-students" method="POST">
                                    <input type="hidden" name="studentId" value="<%= student._id %>">
                                    <button type="submit" class="bg-green-900 hover:bg-green-800 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-700">Approve</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
